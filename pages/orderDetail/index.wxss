.item {
  background: #fff;
  margin-bottom: 24rpx;
}
.item .top {
  box-sizing: border-box;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item .middle {
  box-sizing: border-box;
  padding: 24rpx;
  display: flex;
  align-items: center;
}
.item .middle .middle-left {
  flex: 1;
  display: flex;
  align-items: center;
}
.item .middle .middle-left image {
  margin-right: 24rpx;
  width: 120rpx;
  height: 120rpx;
  background: #ddd;
}
.item .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  box-sizing: border-box;
}
.item .bottom .right {
  text-align: right;
}
.point-info {
  background: #fff;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.point-info view {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #eee;
}
